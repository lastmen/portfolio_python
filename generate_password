from random import *
from time import sleep
def create_password(is_dig, is_low, is_upp, is_punct, unincl, len_pass):     #функция генерации пароля
    dig = '0123456789'
    low_let = 'abcdefghijklmnopqrstuvwxyz'
    upp_let = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
    punct = '!#$%&*+-=?@^_'
    password = []                                                            #пустой список для будущего пароля
    if unincl == 1:                                                          #если нужно исключить символы "il1Lo0O" то исключаем их
        dig = '23456789'
        low_let = 'abcdefghjkmnpqrstuvwxyz'
        upp_let = 'ABCDEFGHIJKLMNPQRSTUVWXYZ'
    a = 1                                                                    #начало рандома для цифр
    b = 1                                                                    #начало рандома для маленьких букв
    c = 1                                                                    #начало рандома для больших букв букв
    if is_low + is_upp + is_punct == 0:                                      #если маленьких, больших и знаков не нужно, то нам нужно заполнить пароль только цифрами, по этому начало рандома для цифр будет длинна пароля
        a = len_pass
    for _ in range(randint(a, len_pass - is_low - is_upp - is_punct) * is_dig):   #range будет длинна пароля минус хотя бы один символ из того что еще нужно добавить к паролю. Умножаем на необходимость цифр (is_digit). Если 0, то range будет 0 и цифры в пароль добавляться не будут.
        password.append(choice(dig))
    if is_upp + is_punct == 0:                                               #та же логика 
        b = len_pass - len(password)                                         #если в пароле уже есть цифры и нужно дозаполнить пароль только маленькими буквами то range = длинна необходимого пароля минус длинна того что уже есть в пароле
    for _ in range(randint(b, len_pass - is_upp - is_punct - len(password)) * is_low):   #логика та же
        password.append(choice(low_let))
    if is_punct == 0:
        c = len_pass - len(password)
    for _ in range(randint(c, len_pass - is_punct - len(password)) * is_upp):
        password.append(choice(upp_let))
    for _ in range((len_pass - len(password)) * is_punct):                    #заполняем оставшееся пространство знаками
        password.append(choice(punct))
    shuffle(password)                                                         #перемешиваем то что получилось в пароле
    return password                                                           #возвращаем перемешанный список символов пароля
def answer_check():                                                           #функция проверки ввода ответов пользователем с защитой от дурака
    answer = ''
    while True:
        answer = input('Введи "Д" - Да/"Н" - Нет: ')
        if answer.lower() == 'д':
            return 1
        elif answer.lower() == 'н':
            return 0
        else:
            print('Я тебя не понял. Повтори, пожалуйста...')
            continue
pass_qantity = ''
is_dig = 0
is_low = 0
is_upp = 0
is_punct = 0
len_pass = ''
uniclude_symbols = 0       #il1Lo0O
print('Приветствую в генераторе паролей!')
print('Чтобы создать для тебя пароль, прошу ответить на несколько вопросов.')
sleep(1)
print('Какой должна быть длинна пароля?')
while True:
    len_pass = input('Введи количество символов: ')                 
    if len_pass.isdigit():                                                      #проверяем ввели число или нет
        len_pass = int(len_pass)                                                #если число, то переводим в целое
        break
    else:
        print('Я тебя не понимаю. Введи, пожалуйста, целое число.')
        continue
print('Пароль должен содержать цифры?')
is_dig = answer_check()
print('Пароль должен содержать маленькие буквы?')
is_low = answer_check()
print('Пароль должен содержать большие буквы?')
is_upp = answer_check()
print('Пароль должен содержать символы "!#$%&*+-=?@^_" ?')
is_punct = answer_check()
print('Нужно ли исключить неоднозначные символы "il1Lo0O" ?')
uniclude_symbols = answer_check()
print('Сколько таких паролей мне необходимо сгенерировать?')
while True:
    pass_qantity = input('Введи количество паролей: ')
    if pass_qantity.isdigit():
        pass_qantity = int(pass_qantity)                                      #то же что и с количеством символов
        break
    else:
        print('Я тебя не понимаю. Введи, пожалуйста, целое число.')
        continue
print('Спасибо за инфо! Держи пароль(и)!')
for _ in range(pass_qantity):
    print(*create_password(is_dig, is_low, is_upp, is_punct, uniclude_symbols, len_pass), sep='') #вносим все переменные в функцию создать пароль, распаковываем спписок который вернула функция
