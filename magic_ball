from random import *
answers = ["Бесспорно", "Мне кажется - да", "Пока неясно, попробуй снова", "Даже не думай",
           "Предрешено", "Вероятнее всего", "Спроси позже", "Мой ответ - нет",
           "Никаких сомнений", "Хорошие перспективы", "Лучше не рассказывать", "По моим данным - нет",
           "Можешь быть уверен в этом", "Да", "Сконцентрируйся и спроси опять", "Весьма сомнительно"]
print("Type name, if you an`t pidaraz")
name = input()
print(f'Привет {name}, я магический шар, и я знаю ответ на любой твой вопрос.')
while True:
    print(f"{name}, ask me something")
    ask = input()
    print(choice(answers))
    print('Do you wanna ask else? Type "yes" if yes and "no" if no.')
    continue_or = input()
    if continue_or == "yes":
        continue
    if continue_or != "yes" or "no":
        print("learn printing, son of bitch")
        break
    if continue_or == "no":
        print('Возвращайся если возникнут вопросы!')
